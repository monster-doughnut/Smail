{
    "manifest_version": 2,
    "name": "Hello World Addon",
    "description": "Adds an icon that opens a tab displaying Hello World.",
    "version": "1.0",
    "author": "Your Name",
    "applications": {
      "gecko": {
        "id": "hello-world@example.com",
        "strict_min_version": "78.0"
      }
    },
    "icons": {
      "32": "icons/icon.png"
    },
    "browser_action": {
      "default_icon": "icons/icon.png",
      "default_title": "Open Hello World"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": [
      "tabs"
    ],
    "web_accessible_resources": [
      "hello.html"
    ]
  }
  